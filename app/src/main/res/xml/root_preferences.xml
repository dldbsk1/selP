<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Personalization">

        <ListPreference
            app:key="background_color"
            app:title="배경화면 색상 변경"
            app:defaultValue="#FFFFFF"
            app:entries="@array/color_entries"
            app:entryValues="@array/color_values"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:key="text_color"
            app:title="글씨 색상 변경"
            app:defaultValue="#000000"
            app:entries="@array/color_entries"
            app:entryValues="@array/color_values"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:key="text_size"
            app:title="글씨 크기 변경"
            app:defaultValue="16"
            app:entries="@array/size_entries"
            app:entryValues="@array/size_values"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory app:title="Notifications">

        <SwitchPreferenceCompat
            app:key="notifications"
            app:title="알람 허용"
            app:defaultValue="true" />

    </PreferenceCategory>
</PreferenceScreen>
